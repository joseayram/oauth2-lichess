{
    "name": "joseayram/oauth2-lichess",
    "description": "Lichess OAuth 2.0 support for the PHP League's OAuth 2.0 Client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jos√© Ayram",
            "email": "ayramj@gmail.com"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "lichess",
        "authorization",
        "authentication"
    ],
    "require": {
        "php": "^7.4|^8.0",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.6.2"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "CrudSys\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CrudSys\\OAuth2\\Client\\Test\\": "tests/"
        }
    }
}
